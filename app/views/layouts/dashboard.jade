extends ./default

block content
  div.row
    div.span12
      ul.nav.nav-pills
        - var items = [{path:"/",label:"News Feed",className:"feed"},{path:"/stars",label:"Stars",className:"stars"},{path:"/interactions",label:"Interactions",className:"interactions"}]
          each item in items
            if (req.path == item.path) 
              li.active
                a(href=item.path, title=item.label, class=item.className) #{item.label}
            else
              li
                a(href=item.path, title=item.label, class=item.className) #{item.label}

  div.row
    block subcontent