
header#header
  .navbar.navbar-inverse.navbar-fixed-top
    .navbar-inner
        .container
          a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='/')
          .nav-collapse.collapse
            ul.nav.authnav
              if (req.isAuthenticated())
                - var items = [{path:"/discover",label:"Discover",className:"discover"},{path:"/stars",label:"Stars",className:"stars"},{path:"/interactions",label:"Interactions",className:"interact"},{path:"/" + req.user.username,label:"Me",className:"me"}];
                each item in items
                  if (req.path == item.path) 
                    li.active
                      a(href=item.path, title=item.label, class=item.className) #{item.label}
                  else
                    li
                      a(href=item.path, title=item.label, class=item.className) #{item.label}
              else
                li
                  a(href='/projects',title="Explore Bilddit") Explore Bilddit
                li
                  a(href='/projects',title="What is this?") What is this?

            ul.nav.pull-right
              if (req.isAuthenticated())
                li
                  a(href="/settings/profile", title="Profile") Settings
                li.divider-vertical
                li
                  a(href="/logout", title="logout") Logout
              else
                li
                  a(href="/login", title="Login") Login
                li
                  a(href="/signup", title="Sign Up") Sign Up